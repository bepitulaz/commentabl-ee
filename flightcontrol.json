{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "development",
      "name": "Development",
      "region": "eu-central-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "commentabl-api",
          "name": "Commentabl API",
          "type": "fargate",
          "buildType": "nixpacks",
          "cpu": 0.25,
          "memory": 0.5,
          "installCommand": "yarn install --immutable",
          "buildCommand": "yarn rw deploy flightcontrol api",
          "startCommand": "yarn rw deploy flightcontrol api --serve",
          "port": 8911,
          "healthCheckPath": "/graphql/health",
          "domain": "devapi.commentabl.ee",
          "envVariables": {
            "DATABASE_URL": {
              "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            },
            "NODE_ENV": "production"
          }
        },
        {
          "id": "commentabl-web",
          "name": "Commentabl Web",
          "type": "static",
          "buildType": "nixpacks",
          "singlePageApp": true,
          "installCommand": "yarn install --immutable",
          "buildCommand": "yarn rw deploy flightcontrol web",
          "outputDirectory": "web/dist",
          "domain": "devapp.commentabl.ee",
          "envVariables": {
            "NODE_ENV": "production"
          }
        },
        {
          "id": "db",
          "name": "Database",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "14",
          "instanceSize": "db.t4g.micro",
          "port": 5432,
          "storage": 20,
          "private": false
        }
      ]
    }
  ]
}
